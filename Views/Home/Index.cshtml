@model DemoPractical.ImageDemo.Models.ImageModel

@{
	ViewData["Title"] = "Home Page";
}

<div class="text-center">
	<h3 class="display-4">Upload Image Here</h3>
	<p>
		@using (Html.BeginForm("SavePicture", "Home", FormMethod.Post, new { enctype = "multipart/form-data", @class = "" }))
		{
			@Html.AntiForgeryToken()

			<div class="form-group ">
				<br/>
				@Html.EditorFor(m => m.File, new { @class = "form-control border mt-1", @type= "file"})

			</div>

			<button type="submit" class="btn btn-primary mt-3"> Upload </button>

		}


	</p>
	<br />
	<div>
		@if (ViewBag.ErrorMessage != null)
		{
			<h4 class="text-danger">@ViewBag.ErrorMessage</h4>
		}
	</div>
	<div>
		@if(ViewBag.ImageUrl != null)
		{
			<h4 class="text-capitalize">
				Image which you have uploaded
			</h4>
			<img src="@ViewBag.ImageUrl" width="500px" height="500px"/>
		}
		else
		{
			<h3>No Image Uploaded!</h3>
		}
	</div>
</div>


